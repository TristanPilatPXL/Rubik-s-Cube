<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Grid>
        





                <Grid Background="Black" x:Name="rubriksGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Content="1" Background="Yellow" Margin="5"
            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

            <Label Grid.Column="4" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="3" Content="2" Background="Blue" Margin="5"
            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

            <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Content="3" Background="Red" Margin="5"
            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

            <Label Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="1" Grid.RowSpan="2" Content="4" Background="Green" Margin="5"
            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

            <Label Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="1" Grid.RowSpan="3" Content="5" Background="Blue" Margin="5"
            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

            <Label Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="1" Grid.RowSpan="2" Content="6" Background="Green" Margin="5"
            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

            <Label Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="1"  Content="7" Background="Yellow" Margin="5"
            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

            <Label Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="4"  Content="8" Background="Red" Margin="5"
            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

            <Label Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="4"  Content="9" Background="Yellow" Margin="5"
            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        </Grid>

    </Grid>
</Window>
